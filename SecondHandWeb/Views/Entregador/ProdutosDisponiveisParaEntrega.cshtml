@model IEnumerable<Entities.Models.Produto>

@{
    ViewData["Title"] = "ProdutosDisponiveisParaEntrega";
}

<h1>Produtos disponíveis para entrega</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.NomeVendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeComprador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioIDEntregador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UsuarioIDEntregador)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataEntrada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataVenda)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioIDVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeVendedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UsuarioIDComprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomeComprador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.Name)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ProdutoId">Details</a><br>
                <a asp-action="Details" asp-route-id="@item.ProdutoId">Entregar</a>
            </td>
        </tr>
}
    </tbody>
</table>
