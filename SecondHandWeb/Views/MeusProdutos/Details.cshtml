@model Entities.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<center><h1>Detalhes</h1></center>

<div>
    <center><h4>@Model.Name</h4></center>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaID)
        </dd>
    </dl>
</div>

<div>
    @if (Model.Estado == Entities.Models.Enums.StatusProduto.Aguardando_Aprovacao)
    {
        <a asp-action="ResponderCompra" asp-route-id="@Model.ProdutoId">Responder Solicitação de Compra</a>
        <hr />
    }
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@if (Model.Estado == Entities.Models.Enums.StatusProduto.Disponivel)
{
    <hr />
    @using (Html.BeginForm("LoadFiles", "MeusProdutos",
                  FormMethod.Post,
                    new { enctype = "multipart/form-data" }))
    {
        <input type="hidden" asp-for="ProdutoId" />
        <dl>
            <dt>
                <label for="FileUpload_FormFile">Adicionar Imagens</label>
            </dt>
            <dd>
                <input id="files" type="file"
                       name="files" multiple />
            </dd>
        </dl>

        <input type="submit" value="Enviar arquivos" class="btn btn-primary" />
        <div style="margin-top:15px">
            <output name="result"></output>
        </div>}
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        .row {
            display: flex;
        }

        .column {
            flex: 33.33%;
            padding: 5px;
        }
    </style>
</head>

<body>
    <div>
        <hr />
        <center><h3>Imagens</h3></center>
        <center>
            <div class="row">
                <div class="column">
                    @foreach (Entities.Models.Imagem im in Model.Imagens)
                    {
                        <img src=@Url.Action("GetImage", "ProdutosDisponiveis", new { id=im.ImagemId})
                             alt=@im.ImageMimeType
                             style="width:20%">
                    }
                </div>
            </div>
        </center>
    </div>
</body>
</html>
