@model Entities.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<center><h1>Detalhes do Produto</h1></center>

<div>
    <center><h4>@Model.Name</h4></center>
    <hr />
    @if (ViewBag.usuario == null)
    {
        <span>
            se
            <a asp-area="Identity" asp-page="/Account/Register" title="Manage">Registrar </a>
            ou Realizar
            <a asp-area="Identity" asp-page="/Account/Login" title="Manage">login</a>
            para Comprar
        </span>
        <hr />
    }
    else
    {
        @if (Model.UsuarioIDVendedor != ViewBag.usuario.Id)
        {
            @if (ViewBag.usuario.CEP == null || ViewBag.usuario.Endereco == null)
            {
                <span>
                    Cadastre um
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Endereco e Cep</a>
                    para comprar
                </span> 
                <hr />
            }
            else
            {
                <a asp-action="Compra" asp-route-id="@Model.ProdutoId">Comprar</a>
                <hr />
            
    <a asp-action="PerfilVendedor" asp-route-id="@Model.ProdutoId">Perfil do vendedor</a>
        }
    }

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataEntrada)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataEntrada)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomeVendedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomeVendedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaID)
        </dd>

    </dl>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

<div>
    @if (ViewBag.usuario == null)
    {
        <hr />
        <span>
            se
            <a asp-area="Identity" asp-page="/Account/Register" title="Manage">Registrar </a>
            ou Realizar
            <a asp-area="Identity" asp-page="/Account/Login" title="Manage">login</a>
            para fazer uma pergunta
        </span>

    }
    else
    {
        @if (Model.UsuarioIDVendedor != ViewBag.usuario.Id)
        {
            <hr />
            <h3>Fazer uma pergunta</h3>
            <form asp-action="SalvaPergunta">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.ProdutoId" />
                <div class="form-group">
                    <label asp-for="Pergunta" class="control-label"></label>
                    <input asp-for="Pergunta" class="form-control" />
                    <span asp-validation-for="Pergunta" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Perguntar" class="btn btn-primary" />
                </div>
            </form>

        }
    }

</div>

<div>
    <hr />
    @if (Model.Pergunta != null)
    {
        <h5>Perguntas anteriores</h5>
        <div class="row">
            <div class="col-md-4">
                @foreach (Entities.Models.Pergunta per in Model.Pergunta)
                {

                    <div class="form-group">
                        <img width="300"
                             src=@Url.Action("GetPergunta", "ProdutosDisponiveis", new { id = per.PerguntaId }) ;>
                    </div>}



            </div>
        </div>

    }
    else
    {
        <h5>Sem Perguntas Anteriores</h5>
    }

</div>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        .row {
            display: flex;
        }

        .column {
            flex: 33.33%;
            padding: 5px;
        }
    </style>
</head>

<body>
    <div>
        <hr />
        <center><h3>Imagens</h3></center>
        <center>
            <div class="row">
                <div class="column">
                    @foreach (Entities.Models.Imagem im in Model.Imagens)
                    {
                        <img src=@Url.Action("GetImage", "ProdutosDisponiveis", new { id=im.ImagemId})
                             alt=@im.ImageMimeType
                             style="width:20%">
                    }
                </div>
            </div>
        </center>
    </div>
</body>
</html>

